		<do-on access-modifier="private" name="Handler_1" display-name="Handler_1" ver="5" event="ValueChanged">
			<body kind="om">
				<![CDATA[if (private.ToolTip.Text != value)
{
	private.ToolTip.Text = value;

	if (value == "")
	{
		//Debug.Log("Скрываем подсказку, так как ошибки больше нет");
		private.DelayTimer.Active = false;
		private.ToolTip.Hide();
	}
	else
	{
		//Debug.Log("Запускаем таймер задержки перед открытием подсказки");
		private.DelayTimer.Active = false;
		private.DelayTimer.Active = true;
	}
}
else if (value != "")
{
	//Debug.Log("Запускаем повторное отображение подсказки");
	private.DelayTimer.Active = true;
		
	if (private.DurationTimer.Active)
	{
		//Debug.Log("Перезапускаем таймер скрытия подсказки");
		private.DurationTimer.Active = false;
		private.DurationTimer.Active = true;
	}
}]]>
			</body>
		</do-on>
